<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient1"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#6EDF6E"
        tools:context=".ScoreCard">

        <TextView
            android:id="@+id/menuBackground"
            android:layout_width="363dp"
            android:layout_height="481dp"
            android:layout_marginTop="244dp"
            android:layout_marginBottom="197dp"
            android:background="@drawable/white_layer_background"
            android:fontFamily="@font/comfortaa"
            android:text="@string/game_title"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="44sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.356" />

        <TextView
            android:id="@+id/scorecardTitle"
            android:layout_width="234dp"
            android:layout_height="129dp"
            android:fontFamily="@font/comfortaa"
            android:text="@string/scoreCard_tile"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="45sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/menuBackground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.836"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.444" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="106dp"
            android:layout_height="90dp"
            android:layout_marginStart="43dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="13dp"
            app:layout_constraintEnd_toStartOf="@+id/scorecardTitle"
            app:layout_constraintHorizontal_bias="0.911"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo" />

        <Button
            android:id="@+id/editPlayers"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginStart="105dp"
            android:layout_marginEnd="106dp"
            android:background="@drawable/button_border"
            android:fontFamily="@font/comfortaa"
            android:text="edit players"
            android:textAllCaps="false"
            android:textColor="#0E0101"
            android:textSize="20sp"
            app:backgroundTint="#6EDF6E"
            app:layout_constraintBottom_toBottomOf="@+id/menuBackground"
            app:layout_constraintEnd_toEndOf="@+id/menuBackground"
            app:layout_constraintStart_toStartOf="@+id/menuBackground"
            app:layout_constraintTop_toBottomOf="@+id/holeNumber" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="130dp"
            android:layout_height="51dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="153dp"
            android:layout_marginEnd="268dp"
            android:layout_marginBottom="253dp"
            android:background="@drawable/roundedbutton"
            android:fontFamily="@font/comfortaa"
            android:gravity="center"
            android:text="# players:"
            android:textColor="#000000"
            android:textSize="25dp"
            app:layout_constraintBottom_toBottomOf="@+id/menuBackground"
            app:layout_constraintEnd_toEndOf="@+id/menuBackground"
            app:layout_constraintHorizontal_bias="0.125"
            app:layout_constraintStart_toStartOf="@+id/menuBackground"
            app:layout_constraintTop_toTopOf="@+id/menuBackground"
            app:layout_constraintVertical_bias="0.708" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="116dp"
            android:layout_height="52dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="241dp"
            android:layout_marginEnd="259dp"
            android:layout_marginBottom="165dp"
            android:background="@drawable/roundedbutton"
            android:fontFamily="@font/comfortaa"
            android:gravity="center|left"
            android:text="  # holes:"
            android:textColor="#070000"
            android:textSize="25dp"
            app:layout_constraintBottom_toBottomOf="@+id/menuBackground"
            app:layout_constraintEnd_toEndOf="@+id/menuBackground"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/menuBackground"
            app:layout_constraintTop_toTopOf="@+id/menuBackground"
            app:layout_constraintVertical_bias="0.521" />

        <EditText
            android:id="@+id/holeNumber"
            android:layout_width="206dp"
            android:layout_height="48dp"
            android:layout_marginStart="138dp"
            android:layout_marginTop="253dp"
            android:layout_marginBottom="180dp"
            android:background="@drawable/edittext_border"
            android:fontFamily="@font/comfortaa"
            android:gravity="center"
            android:hint="input number of holes"
            android:textColorHint="#818181"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/menuBackground"
            app:layout_constraintEnd_toEndOf="@+id/menuBackground"
            app:layout_constraintHorizontal_bias="0.315"
            app:layout_constraintStart_toStartOf="@+id/menuBackground"
            app:layout_constraintTop_toTopOf="@+id/menuBackground"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/playerNumbers"
            android:layout_width="206dp"
            android:layout_height="48dp"
            android:layout_marginStart="144dp"
            android:layout_marginBottom="260dp"
            android:background="@drawable/edittext_border"
            android:fontFamily="@font/comfortaa"
            android:gravity="center"
            android:hint="input number of players"
            android:textColorHint="#818181"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/menuBackground"
            app:layout_constraintStart_toStartOf="@+id/menuBackground" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>